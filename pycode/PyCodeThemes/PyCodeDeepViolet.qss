  background-color: #400020;

}
QTabWidget::pane {}

/*QLabel=====================================================*/

QLabel {
  color: #faebd7;
  font-size: 11px;
}

/*QMainWindow=====================================================*/

QMainWindow {
  background-color: #0f0f0f;
  border-color: #414a4c;
}

QMainWindow::separator
{
    background-color: #400020;
    color: #400020;
    padding-left: 4px;
