  color: #555555;
}

QTextEdit:focus{}



/*QstatusBar=====================================================*/
QStatusBar {
  background-color: #0f0f0f;
  color: white;
  font-size: 11px;
  font-family: "serif";

}

QStatusBar::item{border: none;}

/*QTabBar=====================================================*/

QTabBar {
  background-color: #0f0f0f; 
  border-color: #000;
  font-weight: 400;
  font-family: "serif";

}

QTabBar::tab {
    background-color: #400020;
    padding-left: 10px;
    padding-right: 10px;
    padding-top: 5px;
    padding-bottom: 3px;
    margin-top: 3px;
    margin-bottom: 3px;
    margin-right: -1px;
}


QTabBar::tab:last
{
    margin-right: 0;
    border-top-right-radius: 3px;
}

QTabBar::tab:first:!selected
{
 margin-left: 0px; 
 border-top-left-radius: 3px;
}

QTabBar::tab:!selected
{
    color: #b1b1b1;
    border-bottom-style: none;
    padding-top: 3px;
    margin-top: 6px;
    margin-bottom: -3px;
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:1 #400020, stop:.4 #444);
}

QTabBar::tab:selected
{
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    margin-bottom: 0px;
}

QTabBar::tab:!selected:hover
{
    border-top: 2px solid #400020;
    padding-bottom: 3px;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:1 #0f0f0f, stop:0.4 #400020, stop:0.2 #400020, stop:0.1 #400020);
}

/*QMenuBar=====================================================*/
QMenuBar {
  color: white;
  background-color: #414a4c;
  padding: 3px;
  font-family: "serif";
  
}

QMenuBar::item:selected
{
  border: 1px solid #400020;
  background: transparent;
}


QMenuBar::item
{
    background: transparent;
}

/*Qmenu=====================================================*/

QMenu
{
  color:white;
  border: 1px solid #000;
  background-color: #414a4c;
}

QMenu::separator {}


QMenu::item
{
    padding: 2px 20px 2px 20px;
}

QMenu::item:selected
{
    color: #000000;
    background-color: #400020;
}


QMenuBar::item:pressed
{
    background: #400020;
    border: 1px solid #000;
    margin-bottom:-1px;
    padding-bottom:1px;
}


/* Horizontal Scrollbar =======================================================================================*/

QScrollBar:horizontal {
     border: 1px solid #222222;
     background: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0.0 #400020, stop: 0.2 #d7801a, stop: 1 #400020);
     height: 7px;
     margin: 0px 16px 0 16px;
}

QScrollBar::handle:horizontal
{
      background: QLinearGradient( x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #400020, stop: 0.5 #d7801a, stop: 1 #400020);
      min-height: 20px;
      border-radius: 1px;
}

QScrollBar::add-line:horizontal {
      border: 1px solid #1b1b19;
      border-radius: 2px;
      background: QLinearGradient( x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #400020, stop: 1 #d7801a);
      width: 14px;
      subcontrol-position: right;
      subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal {
      border: 1px solid #1b1b19;
      border-radius: 2px;
      background: QLinearGradient( x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #400020, stop: 1 #d7801a);
      width: 14px;
     subcontrol-position: left;
     subcontrol-origin: margin;
}

QScrollBar::right-arrow:horizontal, QScrollBar::left-arrow:horizontal
{
      border: 1px solid black;
      width: 1px;
      height: 1px;
      background: white;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal
{
      background: none;
}

/* Vertical ScrollBar=====================================================================*/

QScrollBar:vertical
{
      background: QLinearGradient( x1: 0, y1: 0, x2: 1, y2: 0, stop: 0.0 #0f0f0f, stop: 0.2 #444, stop: 1 #0f0f0f);
      width: 17px;
      margin: 16px 0 16px 0;
      border: 2px solid #414a4c;
}

QScrollBar::handle:vertical
{
      background: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #400020, stop: 0.5 #0f0f0f, stop: 1 #400020);
      min-height: 20px;
      border-radius: 2px;
}

QScrollBar::add-line:vertical
{
      border: 1px solid #1b1b19;
      border-radius: 1px;
      background: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #0f0f0f, stop: 1 #400020);
      height: 14px;
      subcontrol-position: bottom;
      subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical
{
      border: 1px solid #1b1b19;
      border-radius: 1px;
      background: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #400020, stop: 1 #0f0f0f);
      height: 14px;
      subcontrol-position: top;
      subcontrol-origin: margin;
}

QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical
{
      border: 1px solid black;
      width: 5px;
      height: 5px;
      background: white;
}


QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical
{
      background: none;
}

/*Dock widget ===================================================== */

QDockWidget::title
